{
    "name": "philipp/silverstripe-markdown-parser",
    "description": "Transforms markdown and markdown extra to HTML and vice versa",
    "type": "silverstripe-vendormodule",
    "homepage": "https://github.com/pstaender/silverstripe-markdown-parser",
    "keywords": [
        "silverstripe",
        "markdown",
        "parser"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/pstaender/silverstripe-markdown-parser/issues"
    },
    "authors": [
        {
            "name": "Philipp Staender",
            "email": "pstaender@mailbox.org"
        }
    ],
    "require": {
        "php": ">=8",
        "silverstripe/framework": "~4",
        "league/html-to-markdown": "^5",
        "soundasleep/html2text": "^1.1",
        "erusev/parsedown": "^1.7",
        "erusev/parsedown-extra": "^0.7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit tests flush=1"
        ]
    },
    "autoload": {
        "psr-4": {
            "Zeitpulse\\": "src/",
            "Zeitpulse\\SilverStripeHelper\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
